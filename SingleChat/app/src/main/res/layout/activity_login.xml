<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="@string/input_phone"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/et_security_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone"
        android:layout_marginTop="20dp"
        android:hint="@string/security_code"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_get_security_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/et_security_code"
        android:text="@string/get_security_code"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_security_code"
        android:layout_marginTop="20dp"
        android:text="@string/login"/>

</RelativeLayout>